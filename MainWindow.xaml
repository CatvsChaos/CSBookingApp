<Window x:Class="BookMyTradie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMyTradie"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1000" Width="1000"
        Background="Black"
        WindowStartupLocation="Manual"
        Top="10" Left="250">


    <!-- MAIN GRID -->
    <ScrollViewer HorizontalScrollBarVisibility="Auto">

        <Grid Width="1000" Height="1000">

            <!-- Make main rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="740"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>


            <!-- GRID ROW 0 : PROGRAM TITLE -->

            <Grid Grid.Row="0">
                <Label Content="BOOK MY TRADIE" Margin="75,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize ="30" FontWeight="Medium" Foreground="Yellow" />
            </Grid>


            <!-- GRID ROW 1 : JOB & ASSIGNMENT FORMS -->

            <Grid Grid.Row="1" Background="LightGray" Margin="0,0,10,0">
                <!-- Make columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="390"/>
                </Grid.ColumnDefinitions>


                <!-- COLUMN 1 : JOB & CONTRACTOR FORMS -->

                <StackPanel HorizontalAlignment="Center" Width="600">

                    <!-- JOB FORM -->
                    <Grid>
                        <!-- Split columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="300"/>
                            <ColumnDefinition MinWidth="300"/>
                        </Grid.ColumnDefinitions>
                        <!-- Job data entry -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                            <Label    Content="Jobs" Margin="0,76,0,10" HorizontalAlignment="Center" Padding="0,0,0,0" FontSize ="20" Foreground="Black"/>
                            <TextBox  x:Name="TextBox_Job_Address"          Text="Enter job address"                Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" />
                            <Label    x:Name="Label_Job_DateStart"          Content="No start date booked"          Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                            <Label    x:Name="Label_Job_DateEnd"            Content="No end date booked"            Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                            <Label    x:Name="Label_Job_ContractorAssigned" Content="No work required"              Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                            <Label    x:Name="Label_Job_Cost"               Content="Cost calculated on assignment" Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" >
                                <Button   Click="Button_Job_Add"    Content="ADD"    Height="30" Width="Auto" Padding="20,5" VerticalAlignment="Bottom" Background="#FF21A15C" BorderThickness="0" Foreground="White" />
                                <Button   Click="Button_Job_Delete" Content="DELETE" Height="30" Width="Auto" Padding="15,5" VerticalAlignment="Bottom" Background="Red"       BorderThickness="0" Foreground="White" />
                                <Button   Click="Button_Job_Clear"  Content="CLEAR"  Height="30" Width="Auto" Padding="20,5" VerticalAlignment="Bottom" Background="Gray"      BorderThickness="0" Foreground="White" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Job viewer and sorter -->
                        <StackPanel Grid.Column="1" MaxWidth="400" MinWidth="300" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <ComboBox x:Name="ComboBox_Jobs" SelectionChanged="ComboBox_Jobs_SelectionChanged" Margin="30,50,20,10" Height="30" />
                            <ListBox  x:Name="ListBox_Jobs"  SelectionChanged="ListBox_Jobs_SelectionChanged"  Margin="30,20,20,10" Height="200" />
                        </StackPanel>
                    </Grid>

                    <!-- Horizontal divider -->
                    <Grid Height="10" Background="Black"/>

                    <!-- CONTRACTOR FORM -->
                    <Grid>
                        <!-- Make columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="300"/>
                            <ColumnDefinition MinWidth="300"/>
                        </Grid.ColumnDefinitions>
                        <!-- Contractor data entry -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Right" >
                            <Label    Content="Contractors" Margin="0,76,0,10" HorizontalAlignment="Center" Padding="0,0,0,0" FontSize ="20" Foreground="Black"/>
                            <TextBox  x:Name="TextBox_Contractor_BusinessName"  Text="Business Name"           Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" />
                            <Label    x:Name="Label_Contractor_DateStart"       Content="No start date booked" Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray"/>
                            <TextBox  x:Name="TextBox_Contractor_Rate"          Text="Rate 00.00"              Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" />
                            <Label    x:Name="Label_Contractor_JobAssigned"     Content="Job to be assigned"   Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray"/>
                            <TextBox  x:Name="TextBox_Contractor_PhoneEmail"    Text="Phone/Email"             Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                                <Button   Click="Button_Contractor_Add"    Content="ADD"    Height="30" Width="Auto" Padding="20,5" VerticalAlignment="Bottom" Background="#FF21A15C" BorderThickness = "0" Foreground="White" />
                                <Button   Click="Button_Contractor_Delete" Content="DELETE" Height="30" Width="Auto" Padding="15,5" VerticalAlignment="Bottom" Background="Red"       BorderThickness = "0" Foreground="White" />
                                <Button   Click="Button_Contractor_Clear"  Content="CLEAR"  Height="30" Width="Auto" Padding="20,5" VerticalAlignment="Bottom" Background="Gray"      BorderThickness = "0" Foreground="White" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Contractor viewer and sorter -->
                        <StackPanel Grid.Column="1" MaxWidth="400" Width="300" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <ComboBox x:Name="ComboBox_Contractors" SelectionChanged="ComboBox_Contractors_SelectionChanged" Margin="30,50,20,10" Height="30" />
                            <ListBox  x:Name="ListBox_Contractors"  SelectionChanged="ListBox_Contractors_SelectionChanged"  Margin="30,20,20,10" Height="200" />
                        </StackPanel>
                    </Grid>

                </StackPanel>

                <!-- Vertical divider -->
                <StackPanel Grid.Column="1" Width="10" Background="Black"></StackPanel>


                <!-- COLUMN 2 : ASSIGNMENT FORM & COST BASED REPORT -->

                <StackPanel HorizontalAlignment="Center" MinWidth="200" Grid.Column="2" Width="360">

                    <!-- Assignment data entry -->
                    <TextBlock  Text="Assignment + Completion" Margin="0,60,0,10" HorizontalAlignment="Center" Padding="0,0,0,0" FontSize ="20" Foreground="Black"/>
                    <TextBlock  Text="Select a Job and Contractor from the lists." Margin="20,1,5,10" Height="49" Width="198" FontSize ="16" Foreground="Black" TextWrapping="Wrap" />
                    <Label      x:Name="Label_Assignment_Job"            Content="Job"                                                          Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                    <Label      x:Name="Label_Assignment_Contractor"     Content="Contractor"                                                   Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                    <DatePicker x:Name="DatePicker_Assignment_DateStart" SelectedDateChanged="DatePicker_Assignment_DateStart_SelectionChanged" Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Black" />
                    <DatePicker x:Name="DatePicker_Assignment_DateEnd"   SelectedDateChanged="DatePicker_Assignment_DateEnd_SelectionChanged"   Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Black" />
                    <Label      x:Name="Label_Assignment_Cost"           Content="Cost 00.00"                                                   Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Gray" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                        <Button Click="Button_Assignment_Assign"   Content="ASSIGN"   Height="30" Width="Auto" Padding="13,5" VerticalAlignment="Bottom" Background="DarkOrange" BorderThickness="0" Foreground="White" />
                        <Button Click="Button_Assignment_Complete" Content="COMPLETE" Height="30" Width="Auto" Padding="10,5" VerticalAlignment="Bottom" Background="Blue"       BorderThickness="0" Foreground="White" />
                        <Button Click="Button_Assignment_Clear"    Content="CLEAR"    Height="30" Width="Auto" Padding="16,5" VerticalAlignment="Bottom" Background="Gray"       BorderThickness="0" Foreground="White" />
                    </StackPanel>

                    <!-- Cost range data entry -->
                    <TextBlock  Text="Cost Based Report" Margin="0,43,0,10" HorizontalAlignment="Center" Padding="0,0,0,0" FontSize ="20" Foreground="Black"/>
                    <TextBlock x:Name="TextBlock_Filter_DisplayRange" Text="Select Assigned Jobs or Completed Jobs list to set cost range filter." Margin="20,1,5,10" Height="65" Width="198" FontSize ="15" Foreground="Black" TextWrapping="Wrap" />
                    <TextBox   x:Name="TextBox_Filter_MinCost"        Text="Enter Min Cost" Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Black" />
                    <TextBox   x:Name="TextBox_Filter_MaxCost"        Text="Enter Max Cost" Margin="20,5,20,5" Height="20" Width="200" VerticalAlignment="Top" Background="White" Padding="2,0,0,0" Foreground="Black" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                        <Button Click="Button_Filter_Report"         Content="REPORT" Height="30" Width="Auto" Padding="34,5" VerticalAlignment="Bottom" Background="DeepPink" BorderThickness="0" Foreground="White" />
                        <Button Click="Button_Filter_ClearCostRange" Content="CLEAR"  Height="30" Width="Auto" Padding="34,5" VerticalAlignment="Bottom" Background="Gray" BorderThickness="0" Foreground="White" />
                    </StackPanel>

                </StackPanel>

            </Grid>


            <!-- GRID ROW 2 : APP INFORMATION -->

            <Grid Grid.Row="2">
